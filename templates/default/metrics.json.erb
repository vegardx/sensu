{
  "checks": {
    "disk_capacity_metrics": {
      "type": "metric",
      "command": "disk-capacity-metrics.rb -s hosts.<%= node[:hostname] =%>.<%= node[:domain] =%>.disk.capacity",
      "interval": 10,
      "subscribers": ["base"],
      "handlers": ["relay"]
    },
    "disk_metrics": {
      "type": "metric",
