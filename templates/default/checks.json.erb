{
    "checks": {
        "check_apt": {
            "notification": "Packages available for upgrade",
            "occurrences": 4,
            "command": "/usr/lib/nagios/plugins/check_apt",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_apt_distupgrade": {
            "notification": "Packages available for dist-upgrade",
            "occurrences": 4,
            "command": "/usr/lib/nagios/plugins/check_apt -d",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_load": {
            "notification": "Load",
            "occurrences": 4,
            "command": "/usr/lib/nagios/plugins/check_load -w 15,10,5 -c 30,25,20",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_raid": {
            "notification": "RAID",
            "occurrences": 1,
            "command": "check-raid.rb",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_ssh": {
            "notification": "SSH",
            "occurrences": 4,
            "command": "/usr/lib/nagios/plugins/check_ssh localhost",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_ntp": {
            "notification": "NTP",
            "occurrences": 4,
            "command": "/usr/lib/nagios/plugins/check_ntp_peer -w 0.10 -c 1.0 -H localhost -W 4 -C 6",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_users": {
            "notification": "Users",
            "occurrences": 4,
            "command": "/usr/lib/nagios/plugins/check_users -w 3 -c 5",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_memory": {
            "notification": "Memory",
            "occurrences": 4,
            "command": "check-mem.sh -w 50 -c 30",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_cpu": {
            "notification": "CPU Usage",
            "occurrences": 4,
            "command": "check-cpu.rb",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_disks": {
            "notification": "Disk Space",
            "occurrences": 4,
            "command": "/usr/lib/nagios/plugins/check_disk -w 70 -c 90 -p /",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_chef": {
            "notification": "Chef",
            "occurrences": 15,
            "command": "check-chef.sh",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_reboot_required": {
            "notification": "Reboot Required",
            "occurrences": 1,
            "command": "check-file-exists.rb -w /var/run/reboot-required",
            "subscribers": [ "base" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_critical": {
            "notification": "Critical Check Triggered",
            "occurrences": 1,
            "command": "check-file-exists.rb -c /tmp/critical",
            "subscribers": [ "base" ],
            "interval": 5,
            "refresh": 60,
            "handlers": ["pagerduty"]
        },
        "check_warning": {
            "notification": "Warning Check Triggered",
            "occurrences": 1,
            "command": "check-file-exists.rb -w /tmp/warning",
            "subscribers": [ "base" ],
            "interval": 5,
            "refresh": 60,
            "handlers": ["pagerduty"]
        },
        "check_hardware_fail": {
            "notification": "Hardware Failure",
            "occurrences": 1,
            "command": "check-hardware-fail.rb",
            "subscribers": [ "metal" ],
            "interval": 60,
            "handlers": ["default"]
        },
        "check_disk_fail": {
            "notification": "SMART Failure",
            "occurrences": 1,
            "command": "check-disk-fail.rb",
            "subscribers": [ "metal" ],
            "interval": 60,
            "handlers": ["default"]
        }
    }
}
